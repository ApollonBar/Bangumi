<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:id="@+id/item_layout"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_now_time"
        android:transitionName="container">

    <TextView
            android:layout_width="58dp"
            android:id="@+id/item_time"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="18:30"/>

    <com.github.siyamed.shapeimageview.RoundedImageView
            app:siRadius="8dp"
            app:siBorderAlpha="0"
            android:id="@+id/item_cover"
            android:transitionName="cover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@+id/item_time"
            android:contentDescription="@string/desc_cover"
            tools:src="@drawable/err_404"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:transitionName="title"
            android:id="@+id/item_chase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="9sp"
            android:padding="2dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/bg_round_rect"
            android:text="@string/hint_chased"
            android:backgroundTint="?colorAccent"
            app:layout_constraintLeft_toLeftOf="@+id/item_ep_name"
            app:layout_constraintRight_toLeftOf="@+id/item_title"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/item_title"
            app:layout_constraintBottom_toBottomOf="@+id/item_title"
            tools:ignore="SmallSp"/>

    <TextView
            android:transitionName="title"
            android:id="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/textSizeMedium"
            tools:text="Subject Name"
            app:layout_constraintLeft_toRightOf="@+id/item_chase"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/item_ep_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeSmall"
            android:ellipsize="end"
            android:singleLine="true"
            app:layout_constraintLeft_toRightOf="@+id/item_cover"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            tools:text="第 1 话 Episode Name"
            app:layout_constraintTop_toBottomOf="@+id/item_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>