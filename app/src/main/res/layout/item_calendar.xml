<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:transitionName="container">
    <LinearLayout
            android:id="@+id/item_now_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <View
                android:layout_margin="12dp"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?colorPrimary"
                android:layout_gravity="center_vertical"/>
        <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:tint="?colorAccent"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_time"
                tools:ignore="ContentDescription"/>
        <TextView
                android:id="@+id/item_now_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?colorAccent"
                android:layout_gravity="center_vertical"
                tools:text="16:33"/>
        <View
                android:layout_margin="12dp"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?colorAccent"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_layout"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@+id/item_now_time"
            android:transitionName="container">
        <TextView android:layout_width="58dp"
                  android:id="@+id/item_time"
                  android:textAlignment="center"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  tools:text="18:30"
                  android:paddingTop="8dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                tools:ignore="RtlHardcoded,HardcodedText"
                app:layout_constraintTop_toTopOf="@+id/item_time"
                app:layout_constraintStart_toEndOf="@+id/item_time"
                app:layout_constraintEnd_toEndOf="parent">

            <com.github.siyamed.shapeimageview.RoundedImageView
                    app:siRadius="8dp"
                    app:siBorderAlpha="0"
                    android:id="@+id/item_cover"
                    android:transitionName="cover"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:contentDescription="@string/desc_cover"
                    tools:src="@drawable/err_404"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:transitionName="title"
                    android:id="@+id/item_chase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="9sp"
                    android:padding="2dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:background="@drawable/bg_round_rect"
                    android:text="@string/hint_chased"
                    android:backgroundTint="?colorAccent"
                    app:layout_constraintLeft_toLeftOf="@+id/item_ep_name"
                    app:layout_constraintRight_toLeftOf="@+id/item_title"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@+id/item_title"
                    app:layout_constraintBottom_toBottomOf="@+id/item_title"
                    tools:ignore="SmallSp"/>
            <TextView
                    android:transitionName="title"
                    android:id="@+id/item_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/textSizeMedium"
                    tools:text="Subject Name"
                    app:layout_constraintLeft_toRightOf="@+id/item_chase"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/item_ep_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeSmall"
                    android:ellipsize="end"
                    android:singleLine="true"
                    app:layout_constraintLeft_toRightOf="@+id/item_cover"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    tools:text="第 1 话 Episode Name"
                    app:layout_constraintTop_toBottomOf="@+id/item_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>