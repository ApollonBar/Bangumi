<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <View
            android:id="@+id/item_outside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:soundEffectsEnabled="false"
            tools:ignore="UnusedAttribute"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/bottom_sheet_behavior">

        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/bottom_sheet_container"
                app:layout_constraintEnd_toEndOf="@+id/bottom_sheet_container"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/bg_round_dialog"/>

        <soko.ekibun.bangumi.ui.view.FastScrollRecyclerView
                android:id="@+id/bottom_sheet_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:overScrollMode="never"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_max="700dp"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                app:fastScrollThumbInactiveColor="?colorPrimaryForeground"
                app:fastScrollThumbColor="?colorAccent"
                app:fastScrollPopupTextSize="32sp"
                app:fastScrollPopupBackgroundSize="48sp"
                app:fastScrollPopupTextColor="@android:color/white"
                app:fastScrollPopupBgColor="?colorAccent"
                android:layout_marginTop="12dp"
                app:spanCount="2"
                tools:listheader="@layout/item_episode"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:itemCount="13"
                tools:listitem="@layout/item_episode_flipper"/>

        <TextView
                android:id="@+id/item_ep_title"
                android:layout_width="0dp"
                android:layout_height="@dimen/appBarSize"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/bg_round_dialog"
                app:layout_constraintEnd_toEndOf="@+id/bottom_sheet_container"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                android:gravity="center_vertical"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/bottom_sheet_container"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/appBarSize"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_dialog"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="@+id/bottom_sheet_container"
                app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                    android:id="@+id/btn_edit_ep"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_edit"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:ignore="ContentDescription"/>

            <ImageButton
                    android:id="@+id/btn_dismiss"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_clear"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>