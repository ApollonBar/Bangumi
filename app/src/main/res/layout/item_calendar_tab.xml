<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="48dp"
                                                   android:layout_height="56dp"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools">
    <View
            android:id="@+id/item_today"
            android:layout_width="4dp"
            android:layout_height="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/item_date"
            android:background="@drawable/bg_round_rect"
            android:backgroundTint="@color/color_selectable"
            />
    <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/item_week"
            android:textSize="12sp"
            android:textColor="@color/color_selectable"
            android:layout_marginBottom="2dp"
            tools:text="4-19"
            />
    <TextView
            android:id="@+id/item_week"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_calendar_selector"
            android:textColor="@color/color_calendar_selector"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@color/color_selectable"
            android:textSize="14sp"
            tools:text="ä¸‰"
            />
</androidx.constraintlayout.widget.ConstraintLayout>