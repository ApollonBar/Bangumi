<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="0dp"
        android:layout_height="wrap_content"
        android:transitionName="container">
    <com.github.siyamed.shapeimageview.RoundedImageView
            app:siRadius="8dp"
            app:siBorderAlpha="0"
            android:id="@+id/item_cover"
            android:transitionName="cover"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/err_404"
            android:contentDescription="@string/desc_cover"/>
    <TextView
            android:id="@+id/item_subject_title"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            tools:text="TV"
            app:layout_constraintEnd_toEndOf="@+id/item_info"
            app:layout_constraintStart_toStartOf="@+id/item_info"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/item_info"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            tools:text="放送日期：2019年4月7日 周日"
            app:layout_constraintLeft_toRightOf="@+id/item_cover"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingBottom="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_subject_title"/>

    <TextView
            android:id="@+id/item_air_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="动画制作：P.A.WORKS"
            app:layout_constraintTop_toBottomOf="@+id/item_info"
            app:layout_constraintStart_toStartOf="@+id/item_info"
            app:layout_constraintEnd_toEndOf="@+id/item_info"/>

    <TextView
            android:id="@+id/item_air_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/item_air_time"
            app:layout_constraintStart_toStartOf="@+id/item_air_time"
            app:layout_constraintEnd_toEndOf="@+id/item_air_time"/>
</android.support.constraint.ConstraintLayout>